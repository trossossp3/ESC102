    <title></title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
          }
          
          th, td {
            text-align: left;
            padding: 8px;
          }
          
          tr:nth-child(even){background-color: #bebebe}
          
          th {
            background-color: #3d3939;
            color: white;
          }
          #search{
            width: 15%;
            
            
          }
          input[type="text"]{
            width: 70%;
            padding: auto;
            margin: 1%;
          }
    </style>
   
  </head>

  <body>
     
<!-- <input type = "button" onclick = "formatTime(100000)" value = "Click Me"> -->
    <h1>All Items <br /></h1>
    <table>
      <form method="POST" action = "/search">
        <label></label>
        <input type = "text" name="term" placeholder="Enter Search term">
        <input id = "search" type = "submit" value= "Search"/>

      </form>
     
      <!-- <label>Search for </label> -->
        <tr>
            <th>Product Code</th>
            <th>Mass</th>
            <th>Item Name</th>
            <th>location From</th>
            <th>Time Created</th>
            <th>Date Created</th>
            <th>Destination</th>
           
        </tr>
    <tr>
       
      </tr>
    
    <% foods.forEach(function (food) { %>
     
        <tr>

          <td>  <%= food.product_code %> </td>
            <td><%= food.mass %></td>
            <td><%= food.food_item %></td>
            <td><%= food.location_from %></td>
            <td><%= food.createdAt.toLocaleTimeString([], {hour: '2-digit', minute: '2-digit'}); %></td>
            <td><%= food.createdAt.toLocaleDateString() %></td>
            <td><%= food.location_to %></td>
           

          </tr>
            <% }) %>
    </table>
  
    <a class = "home" href = "/index">HOME PAGE</a>
  </body>
